                <version>8.37</version>
            </dependency>
            -->
  </dependencies>
  <developers>
    <developer>
      <email>tomxiongzh@gmail.com</email>
      <name>Xiong Gang</name>
    </developer>
  </developers>
  <groupId>spellchecker</groupId>

  <modelVersion>4.0.0</modelVersion>

  <name>Spell check Maven Plugin</name>

  <packaging>maven-plugin</packaging>

  <prerequisites>
    <maven>3.5</maven>
  </prerequisites>

  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.plugin.skipErrorNoDescriptorsFound>true</maven.plugin.skipErrorNoDescriptorsFound>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <version>1.0-SNAPSHOT</version>
</project>